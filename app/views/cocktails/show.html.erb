<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@cocktail.photo.key, :height => 150,) %>);">
  <div class="container">
    <h1 class="text-center"><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-6">
     <%= cl_image_tag @cocktail.photo.key, height: 150, width: 200, :transformation=>[
        {:width=>400, :height=>250, :gravity=>"south", :crop=>"fill", :radius => 20, :effect => "art:hokusai" } ]%>
    </div>
    <div class="col-6">
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Delete</th>
      <th scope="col">Doses</th>
      <th scope="col">Ingredients</th>
    </tr>
  </thead>
  <tbody>
      <% @cocktail.doses.each do |dose| %>
    <tr>
      <td><%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i> DELETE<% end %></td>
      <td><%= dose.description %></td>
      <td><%= dose.ingredient.name %></td>
    </tr>
       <%end %>
  </tbody>
</table>


    </div>
  </div>



    <div class="row mt-5">
      <div class="col">
        <%= link_to "Add your ingredients" , new_cocktail_dose_path(@cocktail) %>
        <%= link_to "Back to the list", cocktails_path %>
      </div>
    </div>



