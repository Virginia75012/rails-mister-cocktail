<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1425&q=80);">
  <div class="container">
    <h1 class="text-center"><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <p><% @cocktail.doses.each do |dose| %> </p>
      <p><%= "#{dose.description} de " "#{dose.ingredient.name}" %></p>
      <%= link_to "Delete ",
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
      <%end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col">
      <%= link_to "Add your ingredients" , new_cocktail_dose_path(@cocktail) %>
      <%= link_to "Back to the list", cocktails_path %>
    </div>
  </div>


</div>







