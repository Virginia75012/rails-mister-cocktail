<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h1>Add a new cocktail</h1>
      <%= simple_form_for [ @cocktail ] do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Save the Cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



