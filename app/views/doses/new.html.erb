<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h1>Add your description and Ingredients</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

